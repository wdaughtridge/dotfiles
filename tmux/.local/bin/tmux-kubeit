#!/usr/bin/env fish

set selected (find ~/.kube -name "*.yaml" -mindepth 1 -maxdepth 1 | fzf)

if [ -z $selected ]
    exit 0
end

set selected_name (basename $selected | tr . _)
set tmux_running (pgrep tmux)

if [ -z $TMUX ] && [ -z $tmux_running ]
    tmux new-session -s $selected_name -c ~ -e "KUBECONFIG=$selected"
    exit 0
end

if ! tmux has-session -t=$selected_name 2> /dev/null
    tmux new-session -ds $selected_name -c ~ -e "KUBECONFIG=$selected"
end

if ! tmux switch-client -t $selected_name 2> /dev/null
    tmux attach-session -t $selected_name
end
